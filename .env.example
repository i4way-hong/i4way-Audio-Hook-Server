# STT 기본 설정
STT_ENABLED=true
STT_PROTOCOL=websocket # websocket | tcp | grpc | mrcp
STT_ENDPOINT=ws://localhost:8080/stt # 또는 tcp://host:port, host:port, [ipv6]:port
STT_ENCODING=L16 # L16 | PCMU
STT_RATE=8000 # 8000 | 16000 | 44100 | 48000
STT_MONO=true # true면 0번 채널만 전송
STT_RESAMPLE_ENABLED=false # true면 레이트 미스매치 시 자동 변환

# WebSocket 옵션
STT_WS_INIT_JSON={"type":"init","sampleRate":8000} # 연결 직후 송신할 JSON
STT_WS_PING_SEC=30 # 0 또는 미설정 시 ping 비활성화
STT_WS_BYE_JSON={"type":"bye"} # 종료 시 송신할 JSON

# TCP 옵션
STT_TCP_FRAMING=raw # raw | len32 | newline
STT_TCP_INIT_HEX= # 연결 직후 송신할 HEX(예: 0a0b0c)
STT_TCP_BYE_HEX= # 종료 시 송신할 HEX(예: ff00)

# 인증/커스텀 헤더(옵션)
# STT_API_KEY= # WebSocket에 Authorization: Bearer로 전송
# STT_HEADERS={"X-Custom":"v"} # WebSocket에 추가 헤더(JSON)

# 예시 프로파일
# - 기본: WebSocket, INIT/핑/종료 메시지 사용, 8k L16, 모노
# - TCP: STT_PROTOCOL=tcp, STT_TCP_FRAMING=len32, STT_TCP_INIT_HEX=0a0b, STT_TCP_BYE_HEX=ff
# - 리샘플: STT_RESAMPLE_ENABLED=true, STT_RATE=16000 (입력 8k여도 자동 변환)
